@using TRvel.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <form id="updateitem" method="post">
        <h2>Items List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>
                            @Html.ActionLink("Update", "GetItemByID", new { id = item.ID })  |
                            @Html.ActionLink("Delete", "GetItemByID", new { id = item.ID })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </form>
</body>
</html>


